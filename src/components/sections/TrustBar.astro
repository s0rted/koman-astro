---
interface Props {
    messages: any;
    locale: string;
}

const { messages, locale } = Astro.props;

const t = (key: string) => {
    return messages?.TrustBar?.[key] || key;
};
---

<section class="w-full bg-white py-8 border-b border-slate-100">
    <div class="container mx-auto px-4 md:px-6">
        <div class="flex flex-col md:flex-row items-center justify-around gap-6 text-center md:text-left">

            <div class="flex items-center gap-4 bg-slate-50 rounded-full px-8 py-4 border border-slate-100 hover:bg-slate-100 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 text-primary"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" fill="currentColor" fill-opacity="0.2"></polygon></svg>
                <div class="text-left">
                    <div class="font-bold text-slate-900 text-sm md:text-base leading-tight">{t('rating')}</div>
                    <p class="text-slate-600 text-xs md:text-sm font-medium">{t('reviews')}</p>
                </div>
            </div>

            <div class="flex items-center gap-4 bg-slate-50 rounded-full px-8 py-4 border border-slate-100 hover:bg-slate-100 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 text-primary"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"></path><path d="m9 12 2 2 4-4"></path></svg>
                <div class="text-left">
                    <div class="font-bold text-slate-900 text-sm md:text-base leading-tight">{t('est')}</div>
                    <p class="text-slate-600 text-xs md:text-sm font-medium">{t('pioneer')}</p>
                </div>
            </div>

            <div class="flex items-center gap-4 bg-slate-50 rounded-full px-8 py-4 border border-slate-100 hover:bg-slate-100 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 text-primary"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M22 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
                <div class="text-left">
                    <div class="font-bold text-slate-900 text-sm md:text-base leading-tight">{t('guests')}</div>
                    <p class="text-slate-600 text-xs md:text-sm font-medium">{t('owned')}</p>
                </div>
            </div>

        </div>
    </div>
</section>
