---
import Layout from '../../../layouts/Layout.astro';
import { TourGrid } from '../../../components/sections/tour-grid';
import { FinalCTA } from '../../../components/sections/final-cta';
import { t, getMessages } from '../../../i18n/utils';

const locale = 'en';
const messages = getMessages(locale);
const title = "All Tours | Koman Lake Tours";
const description = "Explore our selection of boat tours, hiking adventures, and private experiences on Komani Lake and Shala River.";
---

<Layout title={title} description={description} locale={locale}>
  <main class="min-h-screen bg-slate-50 pt-32 pb-24">
    <div class="container mx-auto px-4 md:px-6 mb-16">
        <h1 class="font-heading text-5xl md:text-6xl font-bold text-slate-900 mb-6">
            {t(locale, 'ToursPage.title') || "All Adventures"}
        </h1>
        <p class="text-xl text-slate-600 max-w-2xl leading-relaxed">
            {t(locale, 'ToursPage.subtitle') || "From daily boat crossings to immersive mountain retreats. Choose your way to experience the wild heart of Albania."}
        </p>
    </div>

    <TourGrid client:load messages={messages} locale={locale} />
    
    <div class="mt-24">
        <FinalCTA client:visible messages={messages} locale={locale} />
    </div>
  </main>
</Layout>
