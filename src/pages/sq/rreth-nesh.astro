---
import Layout from '../../layouts/Layout.astro';
import { RevealOnScroll } from '../../components/animations/reveal-on-scroll';
import { Users, Shield } from 'lucide-react';
import { t } from '../../i18n/utils';

const locale = 'sq';
const title = "Rreth Nesh | Komani Lake Tours";
const description = "Pionierët e Ballkanit të Egër. Mësoni rreth Mario Mollës dhe misionit tonë për të mbrojtur Liqenin e Komanit.";

const ui = {
  headerBadge: t(locale, 'AboutPage.header.badge'),
  headerTitle: t(locale, 'AboutPage.header.title'),
  headerSubtitle: t(locale, 'AboutPage.header.subtitle'),
  narrativeTitle: t(locale, 'AboutPage.narrative.title'),
  narrativeP1: t(locale, 'AboutPage.narrative.p1'),
  narrativeP2: t(locale, 'AboutPage.narrative.p2'),
  narrativeP3: t(locale, 'AboutPage.narrative.p3'),
  valConservationTitle: t(locale, 'AboutPage.values.conservation.title'),
  valConservationText: t(locale, 'AboutPage.values.conservation.text'),
  valHeritageTitle: t(locale, 'AboutPage.values.heritage.title'),
  valHeritageText: t(locale, 'AboutPage.values.heritage.text'),
  valCommunityTitle: t(locale, 'AboutPage.values.community.title'),
  valCommunityText: t(locale, 'AboutPage.values.community.text'),
  valIntegrityTitle: t(locale, 'AboutPage.values.integrity.title'),
  valIntegrityText: t(locale, 'AboutPage.values.integrity.text'),
};
---

<Layout title={title} description={description} locale={locale}>
  <main class="min-h-screen bg-white">
    {/* 1. Brand Header */}
    <section class="pt-40 pb-24 bg-slate-900 text-white relative overflow-hidden h-[60vh] min-h-[500px] flex items-center">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/20 to-slate-900 z-10" />
        <img
          src="/albums/optimized/DSC_0374.webp"
          alt="Koman Lake Background"
          class="absolute inset-0 w-full h-full object-cover"
          style="object-position: center 25%"
        />
      </div>

      <div class="container relative z-10 mx-auto px-4 md:px-6">
        <RevealOnScroll client:load>
          <span class="text-primary font-bold uppercase tracking-[0.2em] mb-4 block">
            {ui.headerBadge}
          </span>
          <h1 class="font-heading text-5xl md:text-8xl font-bold mb-8 leading-none">
            {ui.headerTitle} <br />
            <span class="text-white/60">{ui.headerSubtitle}</span>
          </h1>
        </RevealOnScroll>
      </div>
    </section>

    {/* 2. The Narrative */}
    <section class="py-24">
      <div class="container mx-auto px-4 md:px-6">
        <div class="grid lg:grid-cols-2 gap-20">
          <RevealOnScroll direction="right" client:visible>
            <h2 class="font-heading text-4xl font-bold text-slate-900 mb-8">
              {ui.narrativeTitle}
            </h2>
            <div class="space-y-6 text-lg text-slate-600 leading-relaxed">
              <p>{ui.narrativeP1}</p>
              <p>{ui.narrativeP2}</p>
              <p>{ui.narrativeP3}</p>
            </div>
          </RevealOnScroll>

          <RevealOnScroll direction="left" delay={0.2} client:visible>
            <div class="aspect-square bg-slate-100 rounded-3xl overflow-hidden shadow-2xl relative group">
              <img
                src="/albums/optimized/DSC_0502.webp"
                alt="Mario Molla"
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent" />
              <div class="absolute bottom-6 left-6 text-white bg-black/30 backdrop-blur-md px-4 py-2 rounded-xl border border-white/20">
                <span class="text-sm font-bold tracking-widest uppercase">Mario</span>
              </div>
            </div>
          </RevealOnScroll>
        </div>
      </div>
    </section>

    {/* 3. Core Values Grid */}
    <section class="py-24 bg-slate-50">
      <div class="container mx-auto px-4 md:px-6">
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          
          <RevealOnScroll delay={0.1} className="bg-white p-10 rounded-3xl shadow-sm border border-slate-100" client:visible>
            <div class="bg-white w-12 h-12 rounded-full shadow-sm border border-slate-100 flex items-center justify-center overflow-hidden shrink-0 aspect-square mb-6">
               <img src="/images/logo-icon.webp" class="w-full h-full object-contain p-2" alt="" />
            </div>
            <h3 class="font-bold text-xl text-slate-900 mb-4">{ui.valConservationTitle}</h3>
            <p class="text-sm text-slate-500 leading-relaxed">{ui.valConservationText}</p>
          </RevealOnScroll>

          <RevealOnScroll delay={0.2} className="bg-white p-10 rounded-3xl shadow-sm border border-slate-100" client:visible>
            <div class="bg-white w-12 h-12 rounded-full shadow-sm border border-slate-100 flex items-center justify-center overflow-hidden shrink-0 aspect-square mb-6">
               <img src="/images/logo-icon.svg" class="w-full h-full object-contain p-2" alt="" />
            </div>
            <h3 class="font-bold text-xl text-slate-900 mb-4">{ui.valHeritageTitle}</h3>
            <p class="text-sm text-slate-500 leading-relaxed">{ui.valHeritageText}</p>
          </RevealOnScroll>

          <RevealOnScroll delay={0.3} className="bg-white p-10 rounded-3xl shadow-sm border border-slate-100" client:visible>
            <Users className="w-10 h-10 text-primary mb-6" />
            <h3 class="font-bold text-xl text-slate-900 mb-4">{ui.valCommunityTitle}</h3>
            <p class="text-sm text-slate-500 leading-relaxed">{ui.valCommunityText}</p>
          </RevealOnScroll>

          <RevealOnScroll delay={0.4} className="bg-white p-10 rounded-3xl shadow-sm border border-slate-100" client:visible>
            <Shield className="w-10 h-10 text-primary mb-6" />
            <h3 class="font-bold text-xl text-slate-900 mb-4">{ui.valIntegrityTitle}</h3>
            <p class="text-sm text-slate-500 leading-relaxed">{ui.valIntegrityText}</p>
          </RevealOnScroll>

        </div>
      </div>
    </section>
  </main>
</Layout>
